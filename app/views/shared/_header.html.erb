<div class = "row header">
    <div class = "col-md-4">    
        <%= link_to "TheyGotFit", '/'%>
    </div>

    <div class = "col-md-8 log-board">   
        <% if current_user %>
            <%  u = current_user %>
            <p>Hello, <%= link_to u.name, user_path(session[:user_id]), class: "user-name" %>. 
            <%= link_to "Add Record", new_record_path %>
            <%= link_to "Log Out", logout_path %>
            </p>
        <% else %>
            <p> <%= link_to "Sign Up", new_user_path %>
                <%= link_to "Log In", login_path %>  
            </p>
        <% end %>
    </div>
</div>